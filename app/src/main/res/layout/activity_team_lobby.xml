<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icm.projeto.vitalpaint.LobbyTeamActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:background="@color/redTeamColor">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/red_team_name" />
                </LinearLayout>
                <ListView
                    android:id="@+id/list_red_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/invite_friend_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PrimaryFlatButton"
                        android:text="@string/invite_friends"/>
                    <Button
                        android:id="@+id/enter_red_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PrimaryFlatButton"
                        android:text="@string/join_team"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:background="@color/blueTeamColor">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="top|left"
                        android:text="@string/blue_team_name" />
                </LinearLayout>
                <ListView
                    android:id="@+id/list_blue_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/invite_friend_bue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PrimaryFlatButton"
                        android:text="@string/invite_friends"/>
                    <Button
                        android:id="@+id/enter_blue_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/PrimaryFlatButton"
                        android:text="@string/join_team"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/exit_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/PrimaryFlatButton"
        android:src="@drawable/exit_icon"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:text="@string/exit_team_btn"/>

</android.support.constraint.ConstraintLayout>